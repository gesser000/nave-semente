def aleatorio(x,y):
    valor = random.randint(x,y)
    return valor

#Recursos Planetários

def ordem_planeta():
    sorteio = aleatorio(0,9)
    nome_ordem = ['primeiro','segundo','terceiro','quarto','quinto','sexto',
                  'setimo','oitavo','nono','decimo']
    planeta = print(nome_ordem[sorteio])

def atmosfera():
    sorteio = aleatorio(0,5)
    tipo_atmosfera = ['Respiravel','Rarefeita','Não-respiravel',
                      'Tóxica','Corrosiva','nenhuma']
    resultado_atmos = print(tipo_atmosfera[sorteio])

def gravidade():
    sorteio = aleatorio(0,4)
    tipo_gravidade = ['Muito alta','Alta','Moderada',
                      'Baixa','Muito baixa']
    resultado_grav = print(tipo_gravidade[sorteio])

def temperatura():
    sorteio = aleatorio(0,4)
    tipo_temperatura = ['Muito quente','Quente','Amena',
                      'Frio','Muito frio']
    resultado_temp = print(tipo_temperatura[sorteio])

def agua():
    sorteio = aleatorio(0,5)
    tipo_agua = ['Oceanos','Oceano planetário','Calotas polares',
                 'Superficie congelada','Vestigios','Nenhuma']
    resultado_agua = print(tipo_agua[sorteio])

def recursos():
    sorteio = aleatorio(0,2)
    tipo_recursos = ['Rico', 'Pobre', 'Nenhum']
    resultado_rec = print(tipo_recursos[sorteio])

#Anomalias

